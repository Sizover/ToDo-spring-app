<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">


<suite name="All Test Suite">
    <parameter name="url" value="${URL}"/>
    <parameter name="mainLogin" value="${MAIN_LOGIN}"/>
    <parameter name="mainPassword" value="${MAIN_PASSWORD}"/>
    <parameter name="adminLogin" value="${ADMIN_LOGIN}"/>
    <parameter name="adminPassword" value="${ADMIN_PASSWORD}"/>
    <parameter name="attachFolder" value="${ATTACH_FOLDER}"/>
    <parameter name="headless" value="${HEADLESS}"/>
    <parameter name="noSandbox" value="${NO_SANDBOX}"/>
    <parameter name="disableGpu" value="${DISABLE_GPU}"/>
    <parameter name="remoteUrl" value="${REMOTE_URL}"/>
    <parameter name="attachVideoAfterSuccessTest" value="${ATTACH_SUCCES}"/>
    <test name="CHROME_ALL">
        <parameter name = "browserName" value="chrome"/>
        <groups>
            <run>
                <include name = "ALL"/>
                <include name = "PROXY"/>
                <include name = "CleanUp"/>
            </run>
        </groups>
        <packages>
            <package name="dicts" />
            <package name="events" />
            <package name="map" />
            <package name="pmi_tests" />
            <package name="reports" />
        </packages>
        <classes>
            <class name="dicts.CheckingFiles"></class>
            <class name="dicts.Dicts_CumulativePlans"></class>
            <class name="dicts.SearchTests"></class>
            <class name="dicts.Labels"></class>
            <class name="dicts.Dicts_Incidents"></class>
            <class name="dicts.Dicts_KB"></class>
            <class name="events.Events_Incidents"></class>
            <class name="events.StatusTests"></class>
            <class name="map.MapTest"></class>
            <class name="pmi_tests.PimTests"></class>
            <class name="reports.Reports"></class>
            <class name="CleanUp"></class>
        </classes>
    </test>
    <test name="FIREFOX_ALL">
        <parameter name = "browserName" value="firefox"/>
        <groups>
            <run>
                <include name = "ALL"/>
                <include name = "PROXY"/>
                <include name = "CleanUp"/>
            </run>
        </groups>
        <packages>
            <package name="dicts" />
            <package name="events" />
            <package name="map" />
            <package name="pmi_tests" />
            <package name="reports" />
        </packages>
        <classes>
            <class name="dicts.CheckingFiles"></class>
            <class name="dicts.Dicts_CumulativePlans"></class>
            <class name="dicts.SearchTests"></class>
            <class name="dicts.Labels"></class>
            <class name="dicts.Dicts_Incidents"></class>
            <class name="dicts.Dicts_KB"></class>
            <class name="events.Events_Incidents"></class>
            <class name="events.StatusTests"></class>
            <class name="map.MapTest"></class>
            <class name="pmi_tests.PimTests"></class>
            <class name="reports.Reports"></class>
            <class name="CleanUp"></class>
        </classes>
    </test>
</suite>